<?xml version="1.0" encoding="utf-8"?>
<odoo>
		 <report id="print_stock_transit_report"
			model="report.nh_scm_stock_transit_report.report_template"
			string="Stock transit Report"
			report_type="qweb-pdf"
			name="nh_scm_stock_transit_report.report_template"
			file="nh_scm_stock_transit_report.report_template"
			/>

        <report
            id="action_transit_report"
            model="res.partner"
            string="Stock Transit Report"
            report_type="qweb-pdf"
            name="nh_scm_stock_transit_report.report_transit"
            file="nh_scm_stock_transit_report.report_transit"
            menu="False"
        />

		<record id="paperformat" model="report.paperformat">
            <field name="name">NH Stock Transit Report Land A4</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>

		<record id="nh_scm_stock_transit_report.print_stock_transit_report" model="ir.actions.report">
            <field name="paperformat_id" ref="nh_scm_stock_transit_report.paperformat" />
        </record>

        <record id="nh_scm_stock_transit_report.action_transit_report" model="ir.actions.report">
            <field name="paperformat_id" ref="nh_scm_stock_transit_report.paperformat" />
        </record>




   <template id="external_layout_stock_transit_report">

        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="nh_scm_stock_transit_report.external_layout">

            <t t-raw="0" />

        </t>
    </template>

     <template id="external_layout">
        <div class="header">
            <div class="row">
                <div class="col-xs-3 mb4">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 45px;"/>
                </div>
                <div class="col-xs-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-xs-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6" name="company_address">
                    <span t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        style="border-bottom: 1px solid black; display:inline-block;"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_clean">
            <t t-raw="0" />
        </div>

        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone">Phone: <span t-field="company.phone"/></li>
                    <li t-if="company.email">Email: <span t-field="company.email"/></li>
                    <li t-if="company.website">Web: <span t-field="company.website"/></li>
                    <li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>
</odoo>
