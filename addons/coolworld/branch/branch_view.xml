        <record id="account_payment_form_with_branch" model="ir.ui.view">
            <field name="name">account.payment.branch.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="branch_id"
                           options="{'no_create': True}" attrs="{'readonly': [('state', 'in', ('posted','reconciled'))]}"/>
                </field>
            </field>
        </record>

        <record id="bi_branch_account_payment_filter" model="ir.ui.view">
            <field name="name">bi.branch.account.payment.select</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <separator/>
                    <filter name="branch_id" string="Branch" domain="[('branch_id','=',uid)]"/>
                    <filter string="Branch" domain="[]" context="{'group_by':'branch_id'}"/>
                </xpath>
                <!--<group expand="0" string="Group By">
                    <filter string="Branch" domain="[]" context="{'group_by':'branch_id'}"/>
                </group>-->
            </field>
        </record>

        <record id="branch_move_extended" model="ir.ui.view">
            <field name="name">Branch Move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <field name="ref" position="after">
                    <field name="branch_id" attrs="{'readonly': [('state', 'in', ('posted',))]}"/>
                </field>
            </field>
        </record>
        <record id="branch_journal_extended" model="ir.ui.view">
            <field name="name">Branch Journal</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='type']" position="after">
                   <field name="branch_id"/>
                </xpath>

            </field>
        </record>
    </data>
</openerp>
