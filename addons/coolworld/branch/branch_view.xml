            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="branch_id" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="bi_branch_account_bank_statement_filter" model="ir.ui.view">
            <field name="name">bi.branch.account.bank.statement.select</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <separator/>
                    <filter name="branch_id" string="Branch" domain="[('branch_id','=',uid)]"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="Branch" domain="[]" context="{'group_by':'branch_id'}"/>
                </xpath>
            </field>
